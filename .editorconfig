root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.py]
indent_style = space
indent_size = 4
ij_continuation_indent_size = 4

[*.js]
indent_style = space
indent_size = 4
ij_continuation_indent_size = 4

[*.scss]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4
ij_continuation_indent_size = 4

[{*.yml, *.yaml}]
indent_style = space
indent_size = 2

[*.svg]
indent_style = space
indent_size = 2

[{package.json, tsconfig.json}]
indent_style = space
indent_size = 4
